<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="40dp">

    <com.hn.library.view.FrescoImageView
        android:id="@+id/online_header"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:background="@drawable/shap_radius_max_grayness"
        android:layout_marginLeft="9dp"
        android:src="@mipmap/moren"
        fresco:actualImageScaleType="centerCrop"
        fresco:placeholderImage="@mipmap/moren"
        fresco:placeholderImageScaleType="centerCrop"
        fresco:roundAsCircle="true"/>
    <ImageView
        android:id="@+id/iv_vip"
        android:layout_width="@dimen/dp_10"
        android:layout_height="@dimen/dp_10"
        android:layout_alignBottom="@+id/online_header"
        android:layout_alignRight="@+id/online_header"
        android:layout_marginBottom="@dimen/dp_1"
        android:layout_marginRight="@dimen/dp_2"
        android:background="@mipmap/icon_v"
        android:visibility="invisible"/>


</RelativeLayout>