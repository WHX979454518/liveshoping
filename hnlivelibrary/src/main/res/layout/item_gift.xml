<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mLLGiftBg"
    android:layout_width="84dp"
    android:layout_height="88dp"
    android:layout_margin="@dimen/design_margin_top"
    android:padding="2dp"
    tools:ignore="ResourceName">

    <!--头像-->
    <com.hn.library.view.FrescoImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/mIvGift"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="@dimen/design_margin_top"
        android:scaleType="centerCrop"
        app:actualImageScaleType="centerCrop"
        app:actualImageUri="@drawable/gift_loading"
        app:failureImage="@drawable/gift_loading"
        app:failureImageScaleType="centerCrop"
        app:progressBarImage="@drawable/gift_loading"
        app:roundAsCircle="false" />

    <ImageView
        android:id="@+id/mIvSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/design_margin_top"
        android:layout_marginTop="@dimen/design_margin_top"
        android:src="@drawable/gift_select"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/mTvGiftName"
        style="@style/comm_text"
        android:layout_below="@id/mIvGift"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:textColor="@color/comm_text_color_main"
        android:textSize="@dimen/comm_text_size_s" />

    <TextView
        android:id="@+id/mTvGiftCoin"
        style="@style/comm_text"
        android:layout_below="@id/mTvGiftName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1dp"
        android:textColor="@color/comm_text_color_black_s"
        android:textSize="@dimen/comm_text_size_sh" />

</RelativeLayout>