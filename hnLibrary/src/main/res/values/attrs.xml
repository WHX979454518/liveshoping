<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--自定义圆型图片-->
    <declare-styleable name="CircleImageView">
        <!--图片边框的的宽度-->
        <attr name="border_width" format="dimension"/>
        <!--边框颜色-->
        <attr name="border_color" format="color"/>
    </declare-styleable>

    <!--带有过滤表情功能的输入框-->
    <declare-styleable name="HnEditText">
        <!--输入框内容的长度-->
        <attr name="content_length" format="integer"/>
    </declare-styleable>

    <!--带图标文字button-->
    <declare-styleable name="ImageTextButton">
        <attr name="iconId" format="reference"/>
        <attr name="text" format="string"/>
        <attr name="textColor" format="color"/>
        <attr name="iconSize" format="dimension"/>
        <attr name="iMarginTop" format="dimension"/>
        <attr name="iMarginBottom" format="dimension"/>
        <attr name="iDivider" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="HnLoadingLayout">
        <attr name="isFirstVisible" format="boolean"/>
    </declare-styleable>

    <!--Banner布局的自定义属性-->
    <declare-styleable name="BannerLayoutStyle">
        <!--指示器选中和未选中的颜色-->
        <attr name="selectedIndicatorColor" format="color|reference"/>
        <attr name="unSelectedIndicatorColor" format="color|reference"/>
        <!--指示器的形状-->
        <attr name="indicatorShape" format="enum">
            <enum name="rect" value="0"/>
            <enum name="oval" value="1"/>
        </attr>
        <!--指示器选中时的大小-->
        <attr name="selectedIndicatorHeight" format="dimension|reference"/>
        <attr name="selectedIndicatorWidth" format="dimension|reference"/>
        <!--指示器未选中时的大小-->
        <attr name="unSelectedIndicatorHeight" format="dimension|reference"/>
        <attr name="unSelectedIndicatorWidth" format="dimension|reference"/>
        <!--指示器的摆放的位置-->
        <attr name="indicatorPosition" format="enum">
            <enum name="centerBottom" value="0"/>
            <enum name="rightBottom" value="1"/>
            <enum name="leftBottom" value="2"/>
            <enum name="centerTop" value="3"/>
            <enum name="rightTop" value="4"/>
            <enum name="leftTop" value="5"/>
        </attr>
        <!--指示器的间隔-->
        <attr name="indicatorSpace" format="dimension|reference"/>
        <attr name="indicatorMargin" format="dimension|reference"/>
         <!--轮播间隔时间-->
        <attr name="autoPlayDuration" format="integer|reference"/>
        <!--ViewPager滑动切换时间-->
        <attr name="scrollDuration" format="integer|reference"/>
        <!--是否自动轮播-->
        <attr name="isAutoPlay" format="boolean|reference"/>
        <!--是否是Header-->
        <attr name="isHeader" format="boolean|reference"/>
    </declare-styleable>

    <!--刷新View的自定义属性-->
    <declare-styleable name="SpringView">
        <attr name="type">
            <enum name="overlap" value="0"/>
            <enum name="follow" value="1"/>
        </attr>
        <attr name="give">
            <enum name="both" value="0"/>
            <enum name="top" value="1"/>
            <enum name="bottom" value="2"/>
            <enum name="none" value="3"/>
        </attr>
        <attr name="header" format="reference"/>
        <attr name="footer" format="reference"/>
    </declare-styleable>

    <!--左右滑动圆点指示器属性配置-->
    <declare-styleable name="ViewPagerIndicator">
        <!-- Style of the circle indicator. -->
        <attr name="vpiCirclePageIndicatorStyle" format="reference" />
    </declare-styleable>
    <bool name="default_circle_indicator_centered">true</bool>
    <color name="default_circle_indicator_fill_color">#FFFFFFFF</color>
    <color name="default_circle_indicator_page_color">#00000000</color>
    <integer name="default_circle_indicator_orientation">0</integer>
    <dimen name="default_circle_indicator_radius">3dp</dimen>
    <bool name="default_circle_indicator_snap">false</bool>
    <color name="default_circle_indicator_stroke_color">#FFDDDDDD</color>
    <dimen name="default_circle_indicator_stroke_width">1dp</dimen>
    <attr name="centered" format="boolean" />
    <attr name="selectedColor" format="color" />
    <attr name="strokeWidth" format="dimension" />
    <attr name="unselectedColor" format="color" />
    <declare-styleable name="CirclePageIndicator">
        <!-- Whether or not the indicators should be centered. -->
        <attr name="centered" />
        <!-- Color of the filled circle that represents the current page. -->
        <attr name="fillColor" format="color" />
        <!-- Color of the filled circles that represents pages. -->
        <attr name="pageColor" format="color" />
        <!-- Orientation of the indicator. -->
        <attr name="android:orientation" />
        <!-- Radius of the circles. This is also the spacing between circles. -->
        <attr name="radius" format="dimension" />
        <!-- Whether or not the selected indicator snaps to the circles. -->
        <attr name="snap" format="boolean" />
        <!-- Color of the open circles. -->
        <attr name="strokeColor" format="color" />
        <!-- Width of the stroke used to draw the circles. -->
        <attr name="strokeWidth" />
        <!-- View background -->
        <attr name="android:background" />
    </declare-styleable>
</resources>