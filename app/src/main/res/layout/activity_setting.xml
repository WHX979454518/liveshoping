<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/mRlMsg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_49"
                android:background="?attr/item_bg_color">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:drawableRight="@mipmap/more_list"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/design_margin"
                    android:paddingRight="@dimen/design_margin"
                    android:text="个人信息"
                    android:textColor="@color/comm_text_color_black"
                    android:textSize="@dimen/sp_15" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />


            <RelativeLayout
                android:id="@+id/mRlBind"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_49"
                android:background="?attr/item_bg_color"
                android:paddingLeft="@dimen/design_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="绑定手机号"
                    android:textColor="@color/comm_text_color_black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/mTvBind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/design_margin"
                    android:drawablePadding="@dimen/dp_10"
                    android:drawableRight="@mipmap/more_list"
                    android:gravity="right"
                    android:text=""
                    android:textColor="@color/comm_text_color_black_s"
                    android:textSize="14sp" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />

            <RelativeLayout
                android:id="@+id/rl_pwd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_49"
                android:background="?attr/item_bg_color">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:drawableRight="@mipmap/more_list"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/design_margin"
                    android:paddingRight="@dimen/design_margin"
                    android:text="@string/change_pwd1"
                    android:textColor="@color/comm_text_color_black"
                    android:textSize="@dimen/sp_15" />
            </RelativeLayout>

            <View
                android:id="@+id/mViewBlack"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/mRlBlack"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_49"
                android:background="?attr/item_bg_color">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:drawableRight="@mipmap/more_list"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/design_margin"
                    android:paddingRight="@dimen/design_margin"
                    android:text="黑名单"
                    android:textColor="@color/comm_text_color_black"
                    android:textSize="@dimen/sp_15" />
            </RelativeLayout>


            <View
                android:id="@+id/mViewPrivate"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:visibility="gone" />


            <RelativeLayout
                android:id="@+id/mRlPrivate"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_49"
                android:background="?attr/item_bg_color"
                android:paddingLeft="@dimen/design_margin"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tag_private"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="2dp"
                    android:text="隐私"
                    android:textColor="@color/comm_text_color_black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/mTvPrivate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/design_margin"
                    android:layout_toRightOf="@+id/tag_private"
                    android:drawablePadding="@dimen/dp_10"
                    android:drawableRight="@drawable/select_remind_live"
                    android:gravity="center_vertical"
                    android:text="（是否公开店铺资质）"
                    android:textColor="@color/comm_text_color_black_s"
                    android:textSize="12sp" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />

            <RelativeLayout
                android:id="@+id/rl_tixing"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_49"
                android:background="?attr/item_bg_color"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:drawableRight="@mipmap/more_list"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/design_margin"
                    android:paddingRight="@dimen/design_margin"
                    android:text="@string/str_live_notice"
                    android:textColor="@color/comm_text_color_black"
                    android:textSize="@dimen/sp_15" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <RelativeLayout
                android:id="@+id/rl_cache"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_49"
                android:background="?attr/item_bg_color"
                android:paddingLeft="@dimen/design_margin">

                <TextView
                    android:id="@+id/tv_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/str_clear_cache_title"
                    android:textColor="@color/comm_text_color_black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_carch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/design_margin"
                    android:layout_toRightOf="@+id/tv_hint"
                    android:drawablePadding="@dimen/dp_10"
                    android:drawableRight="@mipmap/more_list"
                    android:gravity="right"
                    android:text="0M"
                    android:textColor="@color/comm_text_color_black_s"
                    android:textSize="14sp" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/mRlHelp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_49"
                android:background="?attr/item_bg_color">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:drawableRight="@mipmap/more_list"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/design_margin"
                    android:paddingRight="@dimen/design_margin"
                    android:text="@string/str_help_tickl"
                    android:textColor="@color/comm_text_color_black"
                    android:textSize="@dimen/sp_15" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10" />

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/rl_about"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_49"
                android:background="?attr/item_bg_color">

                <TextView
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:drawableRight="@mipmap/more_list"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/design_margin"
                    android:paddingRight="@dimen/design_margin"
                    android:text="@string/str_about"
                    android:textColor="@color/comm_text_color_black"
                    android:textSize="@dimen/sp_15" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/mRlUpData"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_49"
                android:background="?attr/item_bg_color">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/design_margin"
                    android:paddingRight="@dimen/design_margin"
                    android:text="@string/updata_v"
                    android:textColor="@color/comm_text_color_black"
                    android:textSize="@dimen/sp_15" />


                <ImageView
                    android:id="@+id/iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/design_margin"
                    android:src="@mipmap/more_list" />

                <TextView
                    android:id="@+id/mTvV"
                    style="@style/comm_text"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/iv"
                    android:text="sss"
                    android:textColor="@color/comm_text_color_black_s" />

                <ImageView
                    android:id="@+id/mIvUpData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/mTvV"
                    android:layout_toRightOf="@id/mTvV"
                    android:src="@mipmap/live_red_dian" />
            </RelativeLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/user_exit_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_49"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_24"
            android:background="?attr/item_bg_color"
            android:gravity="center"
            android:text="@string/str_exit_out"
            android:textColor="@color/comm_text_color_red"
            android:textSize="14sp" />
    </LinearLayout>


</ScrollView>