<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@color/white"
    tools:showIn="@layout/frag_user">

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/aboutrl_rl"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/about_us"
            style="@style/user_item_shop"
            android:drawablePadding="8dp"
            android:drawableTop="@drawable/about_us"
            android:text="关于我们"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/mTvRefundNum"
            style="@style/user_item_shop_num" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mRlPay"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">


        <TextView
            android:id="@+id/share_app"
            style="@style/user_item_shop"
            android:drawablePadding="8dp"
            android:drawableTop="@drawable/share_app"
            android:text="分享APP"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/mTvWaitPayNum"
            style="@style/user_item_shop_num" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tv_tenants"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/shoper_joinin"
            style="@style/user_item_shop"
            android:drawablePadding="8dp"
            android:drawableTop="@drawable/shoper_joinin"
            android:text="商家入驻"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/mTvWaitDeliverNum"
            style="@style/user_item_shop_num" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mRlUpData"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/mTvV"
            style="@style/user_item_shop"
            android:drawablePadding="8dp"
            android:drawableTop="@drawable/version_info"
            android:text="版本信息"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/mTvWaitGetNum"
            style="@style/user_item_shop_num" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/mRlEvaluate"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/mIvSetting"
            style="@style/user_item_shop"
            android:drawablePadding="8dp"
            android:drawableTop="@drawable/setting_icon"
            android:text="设置"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/mTvEvaluateNum"
            style="@style/user_item_shop_num" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/aboutnull_rl"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView

            style="@style/user_item_shop"
            android:drawablePadding="8dp"
            android:textSize="12sp" />

        <TextView

            style="@style/user_item_shop_num" />
    </RelativeLayout>


</LinearLayout>