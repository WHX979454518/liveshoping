<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/def_height"
        android:layout_marginRight="@dimen/def_height"
        android:layout_marginTop="@dimen/dp_56"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            style="@style/comm_text"
            android:text="验证码已发送至："
            android:textColor="@color/comm_text_color_black_s" />

        <TextView
            android:id="@+id/mTvPhone"
            style="@style/comm_text"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/comm_text_color_black"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/def_height"
        android:layout_marginRight="@dimen/def_height"
        android:layout_marginTop="@dimen/design_margin"
        android:gravity="center"
        android:orientation="horizontal">


        <com.hn.library.view.HnEditText
            android:id="@+id/mEtCode"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:background="@null"
            android:hint="@string/log_input_ver"
            android:inputType="number"
            android:lines="1"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:textColor="@color/comm_text_color_black"
            android:textColorHint="@color/color_999999"
            android:textSize="14dp"
            app:content_length="8" />

        <com.hn.library.view.HnSendVerifyCodeButton
            android:id="@+id/mBtnSendCode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:gravity="center" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/def_height"
        android:layout_marginRight="@dimen/def_height"
        android:background="?attr/color_f0f0f0" />



    <TextView
        android:id="@+id/mEtBind"
        android:layout_width="140dp"
        android:layout_height="@dimen/dp_39"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_45"
        android:background="@drawable/shape_violet_bg_recentage"
        android:enabled="false"
        android:gravity="center"
        android:text="立即绑定"
        android:textColor="@color/white" />
</LinearLayout>