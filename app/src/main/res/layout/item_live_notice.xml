<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="8dp">

        <com.hn.library.view.FrescoImageView
            android:id="@+id/mIvIco"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:actualImageScaleType="centerCrop"
            app:placeholderImage="@drawable/default_live_head"
            app:placeholderImageScaleType="centerCrop"
            app:roundAsCircle="true" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mTvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="asdasdasdasdasdasdasd"
                android:textColor="@color/comm_text_color_black" />

            <TextView
                android:id="@+id/mTvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:singleLine="true"
                android:text="asdasdasdasdasdasdasd"
                android:textColor="@color/comm_text_color_black_hs" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mTvData"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="2000"
                android:textColor="@color/comm_text_color_black_s" />


            <CheckBox
                android:id="@+id/mBoxCare"
                android:layout_width="75dp"
                android:layout_height="24dp"
                android:layout_gravity="right"
                android:layout_marginTop="2dp"
                android:background="@drawable/sel_btn_live_notice_stoke_30"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="开播提醒"
                android:textColor="@color/sel_stoke_color_live_notiec" />

        </LinearLayout>

    </LinearLayout>

    <View
        style="@style/home_line"
        android:layout_marginLeft="8dp" />

</LinearLayout>