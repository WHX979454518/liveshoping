<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mLLNotice"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="8dp"
    android:background="@color/white">

    <com.hn.library.view.FrescoImageView
        android:id="@+id/mIvIco"
        app:actualImageScaleType="centerCrop"
        app:placeholderImage="@drawable/default_live_head"
        app:placeholderImageScaleType="centerCrop"
        app:roundAsCircle="true"
        android:layout_width="36dp"
        android:layout_height="36dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mTvTitle"
            tools:text="asdsadsaadsaadasdasdasdasdasdasdasdasdasdassdasdasd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/comm_text_color_black" />

        <TextView
            android:id="@+id/mTvName"
            tools:text="asdasdasdasdasdasdasdasqwwebsdsasdasdasrqwwrqwrqwr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:singleLine="true"
            android:textColor="@color/main_color"
            android:textSize="12sp" />

    </LinearLayout>


    <TextView
        android:id="@+id/mTvTime"
        tools:text="55:99"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="8dp"
        android:background="@drawable/shape_soild_main_30"
        android:gravity="center"
        android:paddingBottom="4dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="4dp"
        android:textColor="@color/white" />


</LinearLayout>
