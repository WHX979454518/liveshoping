<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dp_10"
    android:id="@+id/content_layout"
    android:background="@color/white">

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_10">
    <ImageView
        android:layout_height="@dimen/dp_15"
        android:layout_width="67dp"
        android:scaleType="fitXY"
        android:layout_marginLeft="@dimen/dp_12"
        android:id="@+id/type_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/comm_text_color_red"
        android:id="@+id/countdown_textview"
        android:layout_marginRight="@dimen/sp_12"
        android:textSize="@dimen/sp_12"
        android:layout_gravity="right"
        />
</FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spike_or_group_tips"
        android:layout_marginLeft="@dimen/sp_12"
        android:layout_marginTop="@dimen/dp_8"
        android:textSize="@dimen/sp_14"
        android:text="享受1折秒杀"
        android:textColor="@color/comm_text_color_tips"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sp_12"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">
        <com.hn.library.view.FrescoImageView
            android:id="@+id/mIvLeft"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_70"
            android:layout_weight="1"
            app:actualImageScaleType="centerCrop"
            app:placeholderImage="@drawable/default_live"
            app:placeholderImageScaleType="center" />
        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:background="@color/white"
            ></View>
        <com.hn.library.view.FrescoImageView
            android:id="@+id/mIvRight"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_70"
            android:layout_weight="1"
            app:actualImageScaleType="centerCrop"
            app:placeholderImage="@drawable/default_live"
            app:placeholderImageScaleType="center" />
    </LinearLayout>

</LinearLayout>