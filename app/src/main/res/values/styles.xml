<resources>

    <style name="AppTheme" parent="BaseTheme">
    </style>


    <style name="SplashTheme" parent="AppTheme">
        <!--<item table_name="android:windowBackground">@drawable/splash_bg</item>-->
        <item name="android:windowBackground">@drawable/guide_bg</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--加载中样式-->
    <style name="ProgressDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <!--vewView进度条样式-->
    <declare-styleable name="WebViewWithProgress">
        <attr name="progressStyle" format="enum">
            <enum name="horizontal" value="0"/>
            <enum name="circle" value="1"/>
        </attr>
        <attr name="barHeight" format="dimension"/>
    </declare-styleable>

    <style name="Transparent">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>

    <style name="user_item_top">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="user_item_shop">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textSize">12sp</item>
    </style>



    <style name="user_item_shop_num">
        <item name="android:layout_width">@dimen/design_margin</item>
        <item name="android:layout_height">@dimen/design_margin</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:visibility">gone</item>
        <item name="android:background">@drawable/shap_cricle_red</item>
        <item name="android:textColor">@color/comm_text_color_white</item>
        <item name="android:textSize">@dimen/comm_text_size_sh</item>
    </style>

    <style name="SecondLevelCommentTransparent">
        <item name="android:windowBackground">@color/transparent</item> <!-- 背景色透明度 -->
        <item name="android:windowNoTitle">true</item><!-- 无标题 -->
        <item name="android:windowIsTranslucent">true</item><!-- 半透明,设置为false无透明效果 -->
        <item name="android:backgroundDimEnabled">true</item><!-- 模糊 -->
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item> <!-- 窗口样式Dialog -->
    </style>

    <!-- Dialog样式-->
    <style name="ShowCommentDialogTheme" parent="@android:style/Theme.Dialog">
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>

        <item name="android:background">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 遮罩层 -->
        <item name="android:backgroundDimAmount">0</item>


    </style>

    <style name="ShowCommentDialogAnim">

        <item name="android:windowEnterAnimation">@anim/comment_enter_anim</item>

        <item name="android:windowExitAnimation">@anim/comment_out_anim</item>
    </style>

    <!--让Dialog设置 -->
    <style name="DialogBuilder" parent="@android:style/Theme.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- dialog背景 -->
        <item name="android:windowBackground">@color/transparent</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

</resources>
