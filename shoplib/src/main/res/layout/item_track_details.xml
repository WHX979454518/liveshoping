<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="wrap_content">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center">


        <com.hn.library.view.FrescoImageView
            android:id="@+id/mIvIcon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:actualImageScaleType="centerCrop"
            app:placeholderImage="@drawable/default_live_head"
            app:placeholderImageScaleType="centerCrop" />

        <CheckBox
            android:id="@+id/mBoxItem"
            android:layout_width="wrap_content"
            android:button="@drawable/selector_regi_protocol"
            android:layout_height="wrap_content"
            android:enabled="false" />

        <TextView
            android:id="@+id/mTvPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mIvIcon"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="4dp"
            android:singleLine="true"
            android:text="asdasasdasdassadasdd"
            android:textColor="@color/comm_text_color_red" />

    </RelativeLayout>
</LinearLayout>