<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mRlBg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#41000000"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/tag"
        android:layout_width="300dp"
        android:layout_height="180dp"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_log_bg"
        android:gravity="center_vertical"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center">

            <TextView
                style="@style/comm_text"
                android:text="商品库存："
                android:textColor="@color/comm_text_color_black_s" />

            <EditText
                android:id="@+id/mEdWare"
                style="@style/comm_text"
                android:layout_width="180dp"
                android:layout_height="32dp"
                android:background="@drawable/shape_log_ed"
                android:gravity="center_vertical"
                android:hint="请输入库存数量"
                android:inputType="number"
                android:padding="8dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center">

            <TextView
                style="@style/comm_text"
                android:text="商品价格："
                android:textColor="@color/comm_text_color_black_s" />

            <EditText
                android:id="@+id/mEdPrice"
                style="@style/comm_text"
                android:layout_width="180dp"
                android:layout_height="32dp"
                android:background="@drawable/shape_log_ed"
                android:gravity="center_vertical"
                android:hint="请输入商品价格"
                android:inputType="number"
                android:padding="8dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/mTvSure"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:background="@drawable/shape_soild_main_30"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="160dp"
        android:layout_centerInParent="true"
        android:gravity="right"
        android:paddingBottom="16dp"
        android:paddingTop="48dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mRecycler"
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:layout_gravity="right"
            android:layout_marginRight="25dp"
            android:paddingBottom="2dp"
            android:visibility="gone" />
    </LinearLayout>


</RelativeLayout>