<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/mIvState"
        android:src="@drawable/pay_of_fail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        style="@style/comm_text"
        android:id="@+id/mTvState"
        android:layout_marginTop="8dp"
        android:text="支付结果" />

    <LinearLayout
        android:id="@+id/mLLFail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            style="@style/comm_text"
            android:layout_marginTop="4dp"
            android:text="请在"
            android:textSize="12sp" />

        <TextView
            style="@style/comm_text"
            android:layout_marginTop="4dp"
            android:text="30分钟"
            android:textColor="@color/comm_text_color_red"
            android:textSize="12sp" />

        <TextView
            style="@style/comm_text"
            android:layout_marginTop="4dp"
            android:text="内完成付款，否则订单会被系统取消"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="100dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/mTvOrder"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/shape_stoke_main_30"
            android:gravity="center"
            android:text="查看订单"
            android:textColor="@color/main_color" />

        <TextView
            android:layout_width="120dp"
            android:id="@+id/mTvAgain"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape_soild_main_30"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="重新付款" />

    </LinearLayout>


</LinearLayout>