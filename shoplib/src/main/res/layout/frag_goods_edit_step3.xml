<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            style="@style/cus_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white">

            <TextView
                style="@style/comm_text"
                android:layout_width="100dp"
                android:layout_marginRight="8dp"
                android:text="商品类型"
                android:textColor="@color/comm_text_color_black_s" />

            <TextView
                android:id="@+id/mTvSort"
                style="@style/comm_text"
                android:layout_width="80dp"
                android:layout_weight="1"
                android:drawableRight="@mipmap/more_list"
                android:gravity="right"
                android:text=""
                android:textColor="@color/comm_text_color_black" />

        </LinearLayout>

        <TextView
            style="@style/cus_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mTvGoodsSpec"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:background="@color/white"
            android:text="商品规格" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mRecyclerSpec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mRecyclerAttr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" />


    </LinearLayout>
</ScrollView>