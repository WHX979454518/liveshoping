<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="4dp"
    android:paddingTop="4dp">


    <com.hn.library.view.FrescoImageView
        android:id="@+id/mIvGoods"
        android:layout_width="160dp"
        fresco:actualImageScaleType="centerCrop"
        fresco:failureImageScaleType="centerCrop"
        fresco:placeholderImage="@drawable/live_big_img"
        fresco:placeholderImageScaleType="centerCrop"
        android:layout_height="220dp" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/mTvTitle"
        android:layout_marginTop="4dp"
        android:maxLines="2"
        android:text="asdassdasdadaasdsdasaassdasdasd" />

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="bottom">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Â¥"
            android:textColor="@color/comm_text_color_red"
            android:textSize="10sp" />

        <TextView
            style="@style/comm_text"
            android:layout_width="wrap_content"
            android:id="@+id/mTvPrice"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="10000"
            android:textColor="@color/comm_text_color_red"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>