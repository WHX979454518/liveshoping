<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_vertical"
        android:padding="12dp">

        <com.hn.library.view.HnEditText
            android:id="@+id/mEdPut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入金额"
            android:inputType="number"
            android:paddingBottom="4dp"
            android:background="@null"
            android:paddingTop="4dp"
            android:textSize="14sp" />

    </LinearLayout>

    <TextView
        style="@style/comm_text"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:text="注：运费设置为0元，前台商品将显示为包邮。"
        android:textColor="@color/comm_text_color_black_s"
        android:textSize="12sp" />


    <TextView
        android:id="@+id/mTvSure"
        style="@style/cus_padding"
        android:layout_width="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_soild_main_30"
        android:gravity="center"
        android:text="确认"
        android:textColor="@color/white" />

</LinearLayout>